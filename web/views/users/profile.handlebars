<!-- Start post Area -->
<div class="post-wrapper pt-100">
    <!-- Start post Area -->
    <section class="post-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                
                    {{#each posts}}
                    <div class="single-page-post">
                        <div class="top-wrapper">
                            <div class="row d-flex justify-content-between">
                               
                                <h2 class="col-lg-8 col-md-12 text-uppercase">
                                   {{subject}}
                                </h2>
                                <div class="col-lg-4 col-md-12 right-side d-flex justify-content-end">
                                    <div class="desc">
                                        <h2>{{user.fullName}}</h2>
                                     
                                        <h3>{{ createdAt}}</h3>
                                    </div>
                                    <div class="user-img">
                                        <img src="{{user.profileImageURL}}" style="width:50px;">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="single-post-content">
                            <p>
                               {{content}} 
                            </p>
                            
                        </div>
                        <div class="bottom-wrapper">
                            <div class="row">
                                <div class="col-lg-4 single-b-wrap col-md-12">
                                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                                    lily and 4 people like this
                                </div>
                                <div class="col-lg-4 single-b-wrap col-md-12">
                                    <i class="fa fa-comment-o" aria-hidden="true"></i> 06 comments
                                </div>
                                <div class="col-lg-4 single-b-wrap col-md-12">
                                    <ul class="social-icons">
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-facebook" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-twitter" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-dribbble" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-behance" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                    {{/each}}
                </div>
                <div class="col-lg-4 sidebar-area ">
                    <div class="single_widget search_widget">
                        <div id="imaginary_container">
                            <div class="input-group stylish-input-group">
                                <input type="text" class="form-control" placeholder="Search">
                                <span class="input-group-addon">
                                    <button type="submit">
                                        <span class="lnr lnr-magnifier"></span>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
              
                    <div class="single_widget about_widget">
                        <img src="{{user.profileImageURL}}" style="width:300px;">

                        <h2 class="text-uppercase">{{user.displayName}}</h2>
                        <p>
                            {{user.email}}
                            <br> {{user.DateBirth}}
                            <br> {{user.street}}
                            <br> {{user.country}}
                            <br> {{user.phone}}
                            <br>
                        </p>
                        <div class="social-link">
                            <a href="/users/edit_profile/{{user._id}}">
                                <button class="btn text-center">
                                    <i class="fa fa-edit" aria-hidden="true"></i> Edit</button>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- End post Area -->
</div>
<!-- End post Area -->