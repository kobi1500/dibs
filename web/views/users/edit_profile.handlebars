<!-- Start post Area -->
<div class="post-wrapper pt-100">
    <!-- Start post Area -->
    <section class="post-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="single-page-post">
                        

                        <div class="single-post-content">
                          
                        </div>
                        <div class="bottom-wrapper">
                            <div class="row">
                                
                            </div>
                        </div>

                       <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-0 p-b-33">
                <form action="/users/profile/{{user._id}}?_method=PUT" method="post" class="login100-form validate-form flex-sb flex-w" autocomplete="off">
                <input type="hidden" name="_method" value="PUT">
                    <span class="login100-form-title p-b-53">
                        Edit Profile
                    </span>



                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            fullName:
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="full name is required">
                        <input class="input100" type="text" name="fullName" value="{{user.fullName}}">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Date Birth:
                        </span>


                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Date Birth is required">
                        <input class="input100" type="date" name="DateBirth" value="{{user.DateBirth}}">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Street:
                        </span>


                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Street is required">
                        <input class="input100" type="text" name="street" value="{{user.street}}">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Country:
                        </span>


                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Country is required">
                        <input class="input100" type="text" name="country" value="{{user.country}}">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            phone:
                        </span>


                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Phone is required">
                        <input class="input100" type="tel" name="phone" value="{{user.phone}}">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Email:
                        </span>


                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Email is required">
                        <input class="input100" type="email" name="email" value="{{user.email}}">
                        <span class="focus-input100"></span>
                    </div>
                    
                     
                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn">
                           Edit
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>






                    </div>
                </div>
                <div class="col-lg-4 sidebar-area ">
                   

                    <div class="single_widget about_widget">
                        <img src="{{user.profileImageURL}}" style="width:300px;">

                        <h2 class="text-uppercase">{{user.displayName}}</h2>
                        <p>
                            {{user.email}} <br>
                            {{user.DateBirth}}<br>
                            {{user.street}}<br>
                            {{user.country}}<br> 
                            {{user.phone}}<br> 
                        </p>
                      
                    </div>

                </div>
            </div>
        </div>
